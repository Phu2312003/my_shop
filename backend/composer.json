{
    "name": "my-shop/backend",
    "description": "PHP Backend for E-commerce Application",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "mongodb/mongodb": "^1.15",
        "firebase/php-jwt": "^6.4",
        "respect/validation": "^2.2",
        "monolog/monolog": "^3.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
